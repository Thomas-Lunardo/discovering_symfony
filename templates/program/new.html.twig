{% extends 'base.html.twig' %}

{% block title %}Wild Series
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-5 mb-5 text-center">Add new program</h1>
        <div class="form-control text-center">
		{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="mt-3">
		{{ form_widget(form) }}
        </div>
		<button type="submit" class="btn btn-danger mt-4 mb-2">Add program</button>
		{{ form_end(form) }}
        </div>
	</div>
{% endblock %}