{% extends 'base.html.twig' %}

{% block title %}Program #
	{{ program.id }}
{% endblock %}

{% block body %}
	<div class="media container mt-5">
		<img class="align-self-start mr-3 w-25" src="{{ program.poster }}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<h3 class="mt-3">Season n°
				{{ season.number }}</h3>
			<h4 class="mt-3">
				Episode n°
				{{ episode.number}}
				:
			</h4>
			<h5 class="mt-3">Title :
				{{ episode.title }}</h5>
			<p class="mt-3">Synopsis :
				{{ episode.synopsis }}</p>
		</div>
		<a href="{{ path('program_index') }}">
			Return to the program list
		</a>
	</div>
{% endblock %}
