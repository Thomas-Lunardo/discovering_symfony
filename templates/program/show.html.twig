{% extends 'base.html.twig' %}

{% block title %}Program #{{ program.id }}
{% endblock %}

{% block body %}
	<div class="media container mt-5">
		<img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Category :
				{{ program.category.name }}</p>
		</div>
		<h2>Seasons<h2>
				<ul>
					{% for season in program.seasons %}
						<a href="{{ path('program_season_show', {programId:program.id, seasonId:season.id}) }}">
							<li>Season nÂ° {{ season.number }}</li>
						</a>
						<p> {{ season.description }} </p>
					{% endfor %}
				</ul>
				<br>
				<a href="{{ path('program_index') }}">
					Return to the program list
				</a>
			</div>
		{% endblock %}
