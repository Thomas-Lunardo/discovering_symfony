{% extends 'base.html.twig' %}

{% block title %}Program
	{{ program.id }}
{% endblock %}

{% block body %}
	<div class="media container mt-5">
		<img src="{{ program.poster }}" class=" img-fluid rounded mx-auto d-block w-25" alt="{{ program.title }} poster"/>
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>Program synopsis :
				{{ program.synopsis }}</p>
			<p>Program country :
				{{ program.country }}</p>
			<p>Season n°
				{{ season.number }}</p>
			<p>Episode list</p>
			<ul>
				{% for episode in season.episodes %}
					<li>
						<a href="{{ path("episode_show", { slug: program.slug, season_id: season.id, episode_id: episode.id}) }}">
							Episode n°
							{{ episode.number}}
						</a>
						{{ episode.title }}</li>
				{% endfor %}
			</ul>
		</div>
		<a href="{{ path('program_index', { slug: program.slug }) }}">
			Return to the program list
		</a>
	</div>
{% endblock %}
