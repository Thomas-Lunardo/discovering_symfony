{% extends 'base.html.twig' %}

{% block title %}Wild Series
{% endblock %}

{% block body %}
	<div class="container mb-4">
		<h1 class="text-center mb-5">All progames avalable in Wild series</h1>
		{% for program in programs%}
			<div>
				<h2>
					{{ loop.index }}/ {{ program.title}}
				</h2>
				<h3>Category:
					{{ program.category.name}}</h3>
				<a href="{{ path("program_show", { id: program.id }) }}">
					<img src="{{ program.poster }}" class=" img-fluid rounded mx-auto d-block w-25" alt="program poster"/>
				</a>
			</div>
		{% else %}
			No program yet
		{% endfor %}
	</div>
{% endblock %}
