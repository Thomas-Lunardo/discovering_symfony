{% extends 'base.html.twig' %}

{% block title %}Wild Series
{% endblock %}

{% block body %}
<div class="container">
	<h1 class="mt-5 mb-5">All programes by categories avalable in Wild series</h1>
	{% for program in programes%}
		<div class="media-body">
			<h1 class="mt-0">{{ loop.index }}/ {{ program.title }}</h1>
			<p class="fs-5">{{ program.synopsis }}</p>
			<p class="fs-5">Category:
				{{ program.category.name }}</p>
                <a href="{{ path("program_show", { slug: program.slug }) }}" class="fs-5">Voir la fiche</a>
		</div>
	{% else %}
		No program yet
	{% endfor %}
    </div>
{% endblock %}